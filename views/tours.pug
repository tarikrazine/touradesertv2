extends base

block content
    // Tours
    main.tours
        h1.heading-primary.heading-primary--tours.heading-primary--dark all tours.
        each tour in tours
            .card
                .card__back
                .card__header
                    .card__picture
                        .card__picture-overlay &nbsp;
                        img.card__picture-img(src=`/images/tours/${tour.imageCover}`, alt=`${tour.name}`)
                    h3.heading-tertiary.heading-tertiary--card
                        span= tour.name

                .card__details
                    h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
                    p.card__text= tour.summary
                    .card__data
                        i.far.fa-map.fa-2x.card__icon
                        span= tour.startLocation.description
                    .card__data
                        i.far.fa-calendar.fa-2x.card__icon
                        span= tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
                    .card__data
                        i.far.fa-flag.fa-2x.card__icon     
                        span= `${tour.locations.length} stops`
                    .card__data
                        i.far.fa-user.fa-2x.card__icon
                        span= `${tour.maxGroupSize} people`

                .card__footer
                    .card__cost
                        p
                            span.card__footer-value= `$${tour.price}`
                            span.card__footer-text per person
                        p
                            span.card__footer-value= `${tour.ratingsAverage}`
                            span.card__footer-text= `rating (${tour.ratingsQuantity})`
                    .card__btn  
                        a.btn.btn--small.btn--color-primary(href=`/tour/${tour.slug}`) Details